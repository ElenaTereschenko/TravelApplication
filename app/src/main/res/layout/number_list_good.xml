<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_numberListGood_good"
        style="@style/MyCardViewStyle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <CheckedTextView
                android:id="@+id/checkedTextView_numberListGood_good"

                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAllCaps="false"
                android:textColor="#293A6D"
                android:textSize="14dp"
                android:checkMark="@drawable/checkbox_selector"
                android:checked="false"
                />
            <EditText
                android:id="@+id/editText_numberListGood_good"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAllCaps="false"
                android:textColor="#293A6D"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/textView_numberListGood_count"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="250dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:textAllCaps="false"
                android:textColor="#FBB03B"
                android:textSize="18dp"
                android:text="0"/>
            <Button
                android:id="@+id/button_numberListGood_addCount"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="150dp"
                android:background="@null"
                android:stateListAnimator="@null"
                android:drawableTop="@drawable/baseline_add_black_18dp"
                 />
            <Button
                android:id="@+id/button_numberListGood_removeCount"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="70dp"
                android:background="@null"
                android:stateListAnimator="@null"
                android:drawableTop="@drawable/baseline_remove_black_18dp"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>